<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical"
    tools:context=".activity.SettingActivity">

    <!--标题 沉浸式-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/element"
        android:fitsSystemWindows="true"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/mg_6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="@dimen/icon_main_size"
                android:layout_height="@dimen/icon_main_size"
                android:layout_gravity="center_vertical|left"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_background_icon_black"
                android:padding="8dp"
                app:srcCompat="@mipmap/icon_left" />

            <TextView
                android:id="@+id/tv_news_title_top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/black"
                android:textSize="@dimen/font_main_size" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/icon_main_size"
                android:layout_height="@dimen/icon_main_size"
                android:layout_gravity="center_vertical|right"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:padding="1dp"
                android:src="@mipmap/icon_more" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pd_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mg_6"
            android:background="@drawable/shape_radius"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_user_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="@dimen/icon_main_size"
                    android:layout_height="@dimen/icon_main_size"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@mipmap/icon_order_address" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/iv_collect"
                    android:layout_toRightOf="@+id/iv_collect"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="收货地址管理"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/fragment_background" />

            <RelativeLayout
                android:id="@+id/rl_access_record"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/iv_record"
                    android:layout_width="@dimen/icon_main_size"
                    android:layout_height="@dimen/icon_main_size"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@mipmap/icon_access_report" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/iv_record"
                    android:layout_toRightOf="@+id/iv_record"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="出入社区报备"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/fragment_background" />

            <RelativeLayout
                android:id="@+id/rl_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/iv_detail"
                    android:layout_width="@dimen/icon_main_size"
                    android:layout_height="@dimen/icon_main_size"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@mipmap/icon_user_profile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/iv_detail"
                    android:layout_toRightOf="@+id/iv_detail"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="个人信息"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>